<?xml version="1.0" encoding="UTF-8"?>
<configuration>

    <include resource="org/springframework/boot/logging/logback/base.xml"/>

    <!-- ✅ UserController 로그 파일 (20분 단위처럼 분할) -->
    <appender name="USERCONTROLLER" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>../logs/service/user-service/userController.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>../logs/service/user-service/userController.%d{yyyy-MM-dd_HH-mm}.log</fileNamePattern>
            <maxHistory>90</maxHistory> <!-- 약 하루 3개 x 24 = 72 → 90개까지 보관 -->
        </rollingPolicy>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- ✅ AuthController 로그 파일 (20분 단위처럼 분할) -->
    <appender name="AUTHCONTROLLER" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>../logs/service/user-service/authController.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>../logs/service/user-service/authController.%d{yyyy-MM-dd_HH-mm}.log</fileNamePattern>
            <maxHistory>90</maxHistory>
        </rollingPolicy>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- ✅ UserController 로거 -->
    <logger level="INFO"
      name="edu.goorm.userservice.domain.user.controller.UserController"
      additivity="false">
        <appender-ref ref="USERCONTROLLER"/>
    </logger>

    <!-- ✅ AuthController 로거 -->
    <logger level="INFO"
      name="edu.goorm.userservice.domain.auth.controller.AuthController"
      additivity="false">
        <appender-ref ref="AUTHCONTROLLER"/>
    </logger>

    <!-- ✅ 루트 로거: 콘솔 출력 -->
    <root level="INFO">
        <appender-ref ref="CONSOLE"/>
    </root>

</configuration>
